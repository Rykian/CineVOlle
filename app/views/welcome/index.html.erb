<div class="jumbotron">
  <h1>CineVOlle</h1>
  <p class="lead"><%=t 'welcome.description' %></p>

  <%= form_tag '/register', class: 'form-inline' do %>
    <div class="form-group">
      <input type="email" name="email" class="form-control input-lg" placeholder="Votre email" required="required" />
      <button type="submit" class="btn btn-lg btn-success"><%=t 'welcome.signup' %></button>
    </div>
  <% end %>
</div>

<div>
  <ul class="nav nav-tabs">
    <li role="presentation" class="active">
      <a href="#" data-week="current"><%=t 'welcome.this_week' %></a>
    </li>
    <li role="presentation">
      <a href="#" data-week="next"><%=t 'welcome.next_week' %></a>
    </li>
  </ul>

  <% [@current_week, @next_week].each_with_index do |week, i| %>
    <div class="movie-list" id="<%= i== 0 ? 'current' : 'next' %>">
      <% if week.count > 0 %>
        <% week.each do |movie| %>
          <h2><%= movie.title %></h2>
          <% movie.sessions_by_date_for(current_theater_week).each do |date, datetime| %>
            <ul>
              <% datetime.each do |d| %>
                <%=l d, format: :short %>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      <% else %>
        <p class="text-center"><%=t 'welcome.no_movie.' + (i == 0 ? 'current' : 'next') %></p>
      <% end %>
    </div>
  <% end %>
</div>
